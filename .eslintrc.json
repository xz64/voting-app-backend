{
  "plugins": ["node"],
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "rules": {
    "max-len": [
      "error",
      80
    ],
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "warn",
      2,
      { "MemberExpression": 0 }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-trailing-spaces": [
      "error"
    ]
  }
}
